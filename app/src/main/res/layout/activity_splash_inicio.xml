<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#53a99c"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/logoSena"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_sena_negro"/>


    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="TOMAR\nASISTENCIA"
        android:onClick="asistir"
    android:textColor="#1b3834"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_below="@+id/logoSena"
    android:textStyle="bold"
    android:textSize="40sp"
    android:alpha="0.8"
    android:background="#4a968b"
    style="@android:style/Widget.Holo.Button.Borderless"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:text="ADSI-CTPI REGIONAL CAUCA"/>


    </RelativeLayout>

